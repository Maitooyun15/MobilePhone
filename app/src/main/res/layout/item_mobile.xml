<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp" tools:srcCompat="@tools:sample/avatars[4]"
                android:id="@+id/imagesMobile"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY" android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>
        <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp" app:srcCompat="@drawable/heart"
                android:background="#00FFFFFF"
                android:id="@+id/imageButton3" android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TextView"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/namesMobile" app:layout_constraintStart_toEndOf="@+id/imagesMobile"
                android:layout_marginLeft="10dp" android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="220dp"
                android:layout_height="32dp"
                android:maxLines="2"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxEms="2"
                android:id="@+id/priceMobile"
                app:layout_constraintTop_toBottomOf="@+id/namesMobile" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/imagesMobile"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:id="@+id/ratingMobile" android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/priceMobile" android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/imagesMobile"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textSize="13sp"
                android:id="@+id/rating" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/ratingMobile"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.944" android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/priceMobile" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>